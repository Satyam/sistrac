{
  "name": "@devasatyam/controls",
  "version": "1.0.0",
  "description": "My limited version of React Bootstrap using Bootstrap 4",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "run-s build:clean build:compile build:copyCss",
    "build:clean": "rimraf lib",
    "build:compile": "babel src -d lib -s --ignore _*",
    "build:copyCss": "cpy '**/*.css' '../lib/' --cwd=src --parents",
    "lint": "eslint --ext .jsx,.js . || exit 0",
    "parcel": "parcel index.html --open",
    "watch": "nodemon --watch src/ --exec npm run rebuild",
    "rebuild": "run-s build:compile build:copyCss"
  },
  "keywords": [
    "react",
    "bootstrap",
    "bootstrap@4"
  ],
  "author": "Daniel Barreiro",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "final-form": "^4.2.1",
    "parcel-bundler": "^1.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-final-form": "^3.1.2",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cpy-cli": "^1.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.2",
    "jest-enzyme": "^5.0.1",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.1",
    "react-icons": "^2.2.7",
    "rimraf": "^2.6.2"
  }
}
